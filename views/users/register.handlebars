<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img src="/img/logo.png" class="logo">
      <h3 class="text-center">Account Register</h3>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label name="name">Name</label>
          <input type="text" class="form-control" name="fristname" value="{{name}}" required>
        </div>
        <div class="form-group">
          <label name="email">Email</label>
          <input type="email" class="form-control" name="email" value="{{email}}" required>
        </div>
        <div class="form-group">
          <label name="password">Password</label>
          <input type="password" class="form-control" name="password" value="{{password}}" required>
        </div>
        <div class="form-group">
          <label name="password2">Confirm Password</label>
          <input type="password" class="form-control" name="password2" value="{{password2}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>